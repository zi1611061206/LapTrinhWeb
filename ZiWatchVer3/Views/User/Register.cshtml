
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<br /><br /><br /><br /><br />
<div class="container">
    <table>
        <h2>ĐĂNG KÝ THÀNH VIÊN</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height: 40px">
                <td>Họ tên: </td>
                <td>@Html.TextBox("FullName") @ViewData["Loi1"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Email: </td>
                <td>@Html.TextBox("Email") @ViewData["Loi2"] @ViewData["Loi2.1"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Mật khẩu: </td>
                <td>@Html.Password("Password") @ViewData["Loi3"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Nhập lại mật khẩu: </td>
                <td>@Html.Password("ReEnterPassword") @ViewData["Loi4"] @ViewData["Loi4.1"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Giới tính: </td>
                <td>@Html.TextBox("Sex")</td>
            </tr>
            <tr style="height: 40px">
                <td>Địa chỉ: </td>
                <td>@Html.TextBox("Address") @ViewData["Loi6"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Số điện thoại: </td>
                <td>@Html.TextBox("PhoneNumber") @ViewData["Loi7"]</td>
            </tr>
            <tr style="height: 40px">
                <td></td>
                <td><input type="submit" value="Đăng ký" /></td>
            </tr>
        }
    </table>
</div>


