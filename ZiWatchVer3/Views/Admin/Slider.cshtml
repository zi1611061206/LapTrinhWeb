@using ZiWatchVer3.Models
@using PagedList.Mvc
@model PagedList.PagedList<ZiWatchVer3.Models.SLIDER>

@{
    ViewBag.Title = "Quản lý trình chiếu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br /><br /><br />
<div class="container">
    <h2>Quản lý trình chiếu</h2>

    <p>
        @Html.ActionLink("Tạo mới", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HINHANH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIEUDE1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIEUDE2)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HINHANH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIEUDE1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIEUDE2)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MA }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MA }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MA })
                </td>
            </tr>
        }

    </table>

    <!--PagedList-->
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="page-menu">
        @Html.PagedListPager(Model, page => Url.Action("Product", new { page = page }))
    </div>

    <style>
        .page-menu li {
            display: inline;
            margin: 20px;
            font-weight: 800;
        }

        td {
            text-align: center;
        }
    </style>
</div>

