@using ZiWatchVer3.Models
@using PagedList.Mvc
@model PagedList.PagedList<ZiWatchVer3.Models.QUANTRIVIEN>

@{
    ViewBag.Title = "Quản lý quản trị viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>Quản lý quản trị viên</h2>

    <table class="table">
        <tr>
            <th>Họ tên</th>
            <th>Tên đăng nhập</th>
            <th>Ảnh đại diện</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HOTEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TENDANGNHAP)
                </td>
                <td>
                    <img style="width: 100px; height: 150px" src="@Url.Content("~/images/"+item.ANHDAIDIEN)" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MAQUANTRI }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MAQUANTRI }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MAQUANTRI })
                </td>
            </tr>
        }

    </table>

    <!--PagedList-->
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="page-menu">
        @Html.PagedListPager(Model, page => Url.Action("Adminstrator", new { page = page }))
    </div>

    <style>
        .page-menu li {
            display: inline;
            margin: 20px;
            font-weight: 800;
        }

        th, td {
            text-align: center;
        }
    </style>
</div>
